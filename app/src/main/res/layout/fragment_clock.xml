<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeLayout2">
        <LinearLayout
            android:id="@+id/view_city1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_city1"
                style="@style/FragmentTextViewStyle"
                android:text="Ha Noi"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_today1"
                style="@style/FragmentTextViewStyle"
                android:text="Today" />
        </LinearLayout>



        <TextClock
            android:id="@+id/tc_clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@id/view_city1"
            android:textSize="25sp"
            android:timeZone="GMT+0700"
            android:format12Hour="HH:mm:ss"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeLayout1"
        >
        <LinearLayout
            android:id="@+id/view_city2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_city2"
                style="@style/FragmentTextViewStyle"
                android:text="Hong Kong"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_today2"
                style="@style/FragmentTextViewStyle"
                android:text="Today" />
        </LinearLayout>


        <TextClock
            android:id="@+id/tc_clock2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@id/view_city2"
            android:textSize="25sp"
            android:timeZone="GMT+0900"
            android:format12Hour="HH:mm:ss"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />
</LinearLayout>